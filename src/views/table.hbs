<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Static Table</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <!-- Group Filter Form -->
    <form id="groupFilterForm" class="filterForm">
        <label for="groupSelect">Избери група:</label>
        <select id="groupSelect">
            <option value="1971">1971</option>
            <option value="1972">1972</option>
            <option value="1973">1973</option>
        </select>
    </form>

    <!-- Main Table -->
    <table class="mainTable">
        <tbody>
            <tr class="mainRow">
                {{#each programNames}}<td>{{this}}</td>{{/each}}
            </tr>
            {{#each programData}}
            <tr data-group="{{group}}">
                <td>{{schoolStream}}</td><td>{{day}}</td><td>{{time}}</td><td>{{Discipline}}</td><td>{{Type}}</td><td>{{Kind}}</td><td>{{Lecturer}}</td><td>{{studyHall}}</td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <script src="/src/app.js"></script>

</body>
</html>
